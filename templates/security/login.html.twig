{% extends "admin/bars.html.twig" %}


{% block contenpage %}
	<div>
		<a class="hiddenanchor" id="signup"></a>
		<a class="hiddenanchor" id="signin"></a>
		<div class="login_wrapper">
			<div class="animate form login_form">
				<section class="login_content">
					<form method="post">
						<h1>Connexion</h1>
{#												<h1>#}
{#													<a class="reset_pass" href="{{path('register')}}">#}

{#																										{{ "backend.login.create_acount"|trans }}#}
{#													</a>	</h1>#}
						<div>
							<input type="text" value="{{ last_username }}" name="username" id="inputText" class="form-control" placeholder="Username" required autofocus>
						</div>
						<div>
							<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						</div>
						<div>
							<input type="checkbox" class="" name="_remember_me"><span>Remember me</span>
						</div><br/>
						<div>
{#							<button class="btn btn-success submit" href="index.html">Log in</button>#}
							<button class="btn btn-success submit" > Log in</button>

							<a class="reset_pass" href="{{path('app_forgot_password_request')}}">Lost your password?</a>
						</div>

						<div class="separator">
							 <p class="change_link">
								{{ "backend.login.new_site"|trans }}
								<a href="{{path('register')}}" class="to_register">
									{{ "backend.login.create_acount"|trans }}
								</a>
							</p>

							<div class="clearfix"></div>
							<br/>

							<div>

								<p>©{{ "now"|date("Y") }}
									{{ "backend.login.all_rights"|trans }}
									<a target="_blank" href="https://www.smartictunisie.com/">www.smartic.com<a/></p>
								</p>
							</div>
						</div>

						<div class="clearfix"></div>
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}
					</form>
				</section>
			</div>
			<div id="register" class="animate form registration_form">
				<section class="login_content">
					<form>
						<h1>
							{{ "backend.login.create_acount"|trans }}</h1>
						<div>
							<input type="text" class="form-control" placeholder="Username" required=""/>
						</div>
						<div>
							<input type="email" class="form-control" placeholder="Email" required=""/>
						</div>
						<div>
							<input type="password" class="form-control" placeholder="Password" required=""/>
						</div>
						<div>
							<a class="btn btn-default submit" href="index.html">Submit</a>
						</div>

						<div class="clearfix"></div>

						<div class="separator">
							<p class="change_link">{{ "backend.login.already_member"|trans }}
								<a href="#signin" class="to_register">
									{{ "backend.login.log_in"|trans }}
								</a>
							</p>

							<div class="clearfix"></div>
							<br/>
							<div>
{#								<h1>#}
{#									<i class="fa fa-paw"></i>#}
{#									ADMIN PANEL</h1>#}
								<p>©{{ "now"|date("Y") }}
									{{ "backend.login.all_rights"|trans }}
									<a target="_blank" href="//example.com">example.com<a/></p>
								</p>
							</div>
						</div>
					</form>
				</section>
			</div>
		</div>
	</div>

{% endblock %}
{% block javascripts %}{% endblock %}
